<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:vm="using:WriteAndErase_App.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="WriteAndErase_App.ProductPage"
			 x:DataType="vm:ProductVM">
	<Grid RowDefinitions="Auto,*">
		<StackPanel Grid.Row="0">
			<StackPanel Orientation="Horizontal">
				<Button Classes="BTMain" Content="На страницу входа" Margin="10 10 0 0" Command="{Binding ToBackAuth}"></Button>
				<TextBlock Classes="Auth" Text="{Binding User}" Margin="10 10 0 0"></TextBlock>
			</StackPanel>
		</StackPanel>

		<ScrollViewer Grid.Row="1">
			<ListBox Background="Transparent">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<Border>
							<StackPanel>
								
							</StackPanel>
						</Border>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</ScrollViewer>
	</Grid>
</UserControl>
